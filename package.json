{
  "name": "prime-user-app",
  "version": "1.0.0",
  "description": "Desktop application for prime users to place bets on casino numbers",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite preview --host 0.0.0.0 --port ${PORT:-4173}",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm:dev\" \"wait-on http://localhost:3001 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --x64"
  },
  "keywords": [
    "electron",
    "casino",
    "betting"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^2.1.0",
    "axios": "^1.6.7",
    "jsbarcode": "^3.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "baseline-browser-mapping": "^2.9.19",
    "concurrently": "^8.2.2",
    "electron": "^28.3.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.kssdesktop.primeuser",
    "productName": "KSS Desktop",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
